@using Dojo_Survey_Model.Models
@model Survey
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Survey</title>
</head>
<body>

    <form asp-action="SurveyAnswers" asp-controller="Home" method='POST'>
        <p>
            <span asp-validation-for="Name"></span>
            <label asp-for="Name">Name</label>
            <input asp-for="Name">
        </p>

        <p>
            <span asp-validation-for="Location"></span>
            <label asp-for="Location">Location</label>
            <select asp-for="Location">
                <option value="oakland">Oakland</option>
                <option value="seattle">Seattle</option>
                <option value="Sanjose">San Jose</option>
            </select>
        </p>

        <p>
            <span asp-validation-for="Language"></span>
            <label asp-for="Language">Lanugage</label>
            <select asp-for="Language">
                <option value="csharp">C#</option>
                <option value="java">Java</option>
                <option value="python">Python</option>
            </select>
        </p>

        <p>
            <span asp-validation-for="Comment"></span>
            <label asp-for="Comment">Comment</label>
            <textarea asp-for="Comment" cols="30" rows="10"></textarea>
        </p>

        <button type="submit">Submit</button>

    </form>
</body>
</html>